//顶部NavView
-(void)setTopNavView
{
    int imgY = -20;
    if (IOS7_OR_LATER) {
        imgY = 0;
    }
    

    TopNavView *navView=[[TopNavView alloc] initWithFrame:CGRectMake(0, imgY,SCREEN_WIDTH, 64)];
    [self.view addSubview:navView];
    
    [navView addLeftBtnTarget:self action:@selector(toBackView) forControlEvents:UIControlEventTouchUpInside];
    
    
    if(self.mylistType == myListMyTopic)
        self.titleStr=@"我的帖子";
    else if(self.mylistType == myListPostReply)
        self.titleStr=@"我的回复";
    else if(self.mylistType == myListBBSCollect)
        self.titleStr=@"帖子收藏";
    else if(self.mylistType == mylistHotBBS)
        self.titleStr=@"热门话题";
    
    
    [navView setTitleStr:_titleStr];
    
    
    if (IS_ShowMessageIcon && self.mylistType==myListPostReply) {
        navView.titleLab.hidden=YES;
        
        segmentedControl=[[UISegmentedControl alloc] initWithItems:@[@"我的回复",@"回复我的"]];
        segmentedControl.frame=CGRectMake(SCREEN_WIDTH/2. - 80, 25.5, 160., 30);
        segmentedControl.tintColor=NAV_RED_COLOR;
        if(self.isReplyME)
            segmentedControl.selectedSegmentIndex=1;
        else
            segmentedControl.selectedSegmentIndex=0;
        [segmentedControl setSegmentedControlStyle:UISegmentedControlStyleBordered];
        
        [segmentedControl addTarget:self action:@selector(segmentedControlChanged:) forControlEvents:UIControlEventValueChanged];
        [navView addSubview:segmentedControl];
    }
    
    
}

-(void)segmentedControlChanged:(UISegmentedControl *)sender
{
    self.noDataView.hidden=YES;
    if (sender.selectedSegmentIndex==0 ) {
        
        if (self.dataArray.count>0) {
            
            [self.bbsTableView reloadData];
        }else  [self refreshRequestData];
    }else
    {
        if (self.replyMeDataArray.count>0) {
            [self.bbsTableView reloadData];
        }else  [self refreshRequestData];
    }

    int index= (int)sender.selectedSegmentIndex;
    NSLog(@"点击情况 %d",index);
    
}


//返回
-(void)toBackView
{
    [self.navigationController popViewControllerAnimated:YES];
    
    
    if(self.mylistType==myListPostReply)
    {
        //检查 论坛消息num
        [m_appDelegate checkMessageNum];
    }
    
}


